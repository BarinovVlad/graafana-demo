{
  "uid": "service-health284",
  "title": "Service Health Dashboard",
  "tags": ["prometheus", "health", "up"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "1m",
  "style": "dark",
  "editable": true,
  "panels": [
    {
      "id": 1,
      "title": "Service Up Status",
      "type": "table",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "go_gc_gomemlimit_bytes",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "columns": [
        {"text": "Job", "value": "metric.job"},
        {"text": "Instance", "value": "metric.instance"},
        {"text": "Up", "value": "value"}
      ],
      "pageSize": 10,
      "scroll": true,
      "transform": "timeseries_to_columns",
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "showHeader": true
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Total Services Up",
      "type": "stat",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "sum(up)",
          "refId": "A"
        }
      ],
      "colorMode": "value",
      "graphMode": "none",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "green",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 3,
      "title": "Services Down Count",
      "type": "stat",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "count(up == 0)",
          "refId": "A"
        }
      ],
      "colorMode": "value",
      "graphMode": "none",
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 1
              }
            ]
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 6,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Up Metric Over Time",
      "type": "timeseries",
      "datasource": "prometheus",
      "targets": [
        {
          "expr": "go_gc_gomemlimit_bytes",
          "refId": "A",
          "legendFormat": "{{job}} - {{instance}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          }
        },
        "overrides": []
      },
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 12
      },
      "options": {
        "legend": {
          "displayMode": "list",
          "placement": "bottom"
        },
        "tooltip": {
          "mode": "multi"
        }
      }
    }
  ],
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "timepicker": {},
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  }
}
